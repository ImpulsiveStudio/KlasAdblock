{
  "manifest_version": 2,
  "name": "Klas애드블록",
  "description": "경희대 클라스를 위한 애드블록입니다.",
  "version": "1.0",
  "background": {
      "scripts": ["assets/JS.js","assets/jquery-3.4.1.js"]
  },

  "permissions": [
      "webRequest",
      "webRequestBlocking",
      "http://*/*",
      "https://*/*",
      "tabs"
  ],
  "browser_action": {
    "default_popup": "popUp.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png"
      }
  }
}
